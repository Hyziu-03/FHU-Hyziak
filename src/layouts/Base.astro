---
import "../styles/font.css";
import "../styles/base.css";
import "../styles/media.css";
import Logo from "../components/Logo.astro";
import Preload from "../components/Preload.astro";
const { title, path, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="pl-PL">
    <head>
        <!-- Google tag (gtag.js) -->
        <script
            async
            src="https://www.googletagmanager.com/gtag/js?id=G-JQDZ6GHD7E"
        ></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag() {
                dataLayer.push(arguments);
            }
            gtag("js", new Date());
            gtag("config", "G-JQDZ6GHD7E");
        </script>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="description" content={description} />
        <meta
            name="keywords"
            content="skup grzybów gorlice, sprzedaż grzybów, skup jabłek gorlice, wynajem magazynów gorlice, kolczak obłączasty skup, lejkowiec dęty skup, prawdziwek skup, borowik szlachetny skup, pieprznik jadalny skup, kurka skup,  mleczaj rydz skup, jabłka spady skup"
        />
        <meta name="title" content={title} />
        <meta name="robots" content="index, follow" />
        <meta name="author" content="Szymon Hyziak" />
        <meta name="theme-color" content="#e0ba81" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />

        <link rel="apple-touch-icon" href="icons/mushroom.webp" />
        <link rel="icon" href="icons/mushroom.webp" type="image/png" />
        <link rel="manifest" href="manifest.json" />
        <link
            rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0"
            media="screen"
        />
        <Preload />
        <link rel="canonical" href=`https://fhu-hyziak.vercel.app/${path}` />

        <title>{title}</title>

        <!--[if lt IE 9]> 
        	<script 
				src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js" 
				integrity="sha512-UDJtJXfzfsiPPgnI5S1000FPLBHMhvzAMX15I+qG2E2OAzC9P1JzUwJOfnypXiOH7MRPaqzhPbBGDNNj7zBfoA==" 
				crossorigin="anonymous">
			</script>
    	<![endif]-->
    </head>
    <body>
        <div>
            <header class="header" id="header" tabindex="0">
                Zapraszamy w godzinach 10:00 - 17:00!
            </header>
            <nav>
                <ol class="menu">
                    <li>
                        <a 
                            href="/" 
                            class="link menu-item logo-container"
                            rel="noopener noreferrer"
                        >
                            <Logo />Strona główna
                        </a>
                    </li>
                    <li>
                        <a
                            href="/kontakt"
                            class="link menu-item transform-underline"
                            rel="noopener noreferrer"
                        >
                            Kontakt
                        </a>
                    </li>
                    <li>
                        <a
                            href="/aktualnosci"
                            class="link menu-item transform-underline"
                            rel="noopener noreferrer"
                        >
                            Aktualności
                        </a>
                    </li>
                    <li>
                        <a
                            href="/opinie"
                            class="link menu-item transform-underline"
                            rel="noopener noreferrer"
                        >
                            Opinie
                        </a>
                    </li>
                    <li>
                        <a
                            href="/o-nas"
                            class="link menu-item transform-underline"
                            rel="noopener noreferrer"
                        >
                            O nas
                        </a>
                    </li>
                </ol>
            </nav>
            <main class="content">
                <slot />
            </main>
            <footer class="footer">
                FHU Hyziak - skup grzybów, jabłek i wynajem magazynów w Ropicy
                Polskiej k. Gorlic &copy; Wszelkie prawa zastrzeżone. <br />
                Autorem strony internetowej jest Szymon Hyziak. 
                Wersja z 23 czerwca 2023 roku
            </footer>
        </div>
    </body>
    <script>
        import "../scripts/index.js";
        const styles = "color: #e0ba81; font-weight: bold";
        async function registerServiceWorker() {
            if (!("serviceWorker" in navigator)) return;
            const event = await navigator.serviceWorker.register(
                "serviceWorker.js",
                { scope: "." }
            );
            event.installing
                ? console.log("%cⓘ Service worker is being installed", styles)
                : event.waiting
                ? console.log("%cⓘ Service worker has been installed", styles)
                : event.active &&
                  console.log("%cⓘ Service worker is active", styles);
        }
        registerServiceWorker();
    </script>
</html>
